#include<iostream>
using namespace std;
class Base
{
public:
	Base()
	{
		cout <<"Bsae的构造函数 "<< endl;
	}
	~Base()
	{
		cout<<"Base的析构函数" << endl;
	}
};
class Son :public Base
{
public:
	Son()
	{
		cout << " Son的构造函数 " << endl;
	}
	~Son()
	{
		cout << "Son的析构函数" << endl;
	}
};

void test01()
{
	//Base b;
	Son c;
	//继承中的构造和析构顺序
	//先构造父类再构造子类
	//先析构子类再析构父类
}


int main()
{

	test01();

	system("pause");

	return 0;
}

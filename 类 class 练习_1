#include<iostream>
#include<string>
using namespace std;

class Student
{
public:
	string m_name;
	int m_id;
	void showStudent()
	{
		cout << "姓名 " << m_name << " 学号 " << m_id << endl;
	}
	void setname(string name)
	{
		m_name = name;
	}
};


int main()
{
	Student s1;
	s1.m_name = "fisher";
	s1.m_id = 233;
	s1.showStudent();

	Student s2;
	s2.m_name = "we";
	s2.m_id = 34;
	s2.showStudent();

	Student s3;
	string name = "hh";
	s3.setname(name);
	s3.m_id = 34;
	s3.showStudent();


	system("pause");
	return 0;
}
